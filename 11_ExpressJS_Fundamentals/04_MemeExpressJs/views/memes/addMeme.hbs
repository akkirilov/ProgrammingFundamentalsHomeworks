<!DOCTYPE html>
<html lang="en">
{{> head}}
<body>
{{> header}}
{{> searchBar}}
{{> infoBar}}
{{> pageTitle}}
<div class="container">
    
    <form action="/memes/add" enctype=multipart/form-data method="POST">
            <input type="text" id="title" name="title" placeholder="The title of the meme">

            <select name='genre' id="genreSelect">
                {{#each genres}}
               		<option value="{{_id}}">{{name}}</option>
            	{{/each}}
            </select>


            <input type="file" id="memeSrc" name="memeSrc" placeholder="Link to a image">
			
			<div class="block">
 			<label for="privacy">Private </label>
            <input type="checkbox" name="privacy" id="privacy" />
			</div>
            <textarea id="description" name="description" placeholder="Meme description" rows="10" cols="10"></textarea>

            <input class="block" type="submit" value="Submit">
    </form>
    
</div>
{{> footer}}
</body>
</html>