<!DOCTYPE html>
<html lang="en">
{{>head}}
<body>
{{>header}}

<main>
    <form class="form center-form" method="post" enctype="multipart/form-data">
    <h2 class="center">Edit product</h2>
      <div class="form-group">
        <label for="name">Name</label>
        <input id="name" name="name" type="text" class="input-field" value="{{product.name}}" />
      </div>

      <div class="form-group">
        <label for="description">Description</label>
        <textarea id="description" name="description" type="text" 
          class="input-field">{{product.description}}</textarea>
      </div>

      <div class="form-group">
        <label for="price">Price</label>
        <input id="price" name="price" type="number" step="0.01" 
          class="input-field" value="{{product.price}}" />
      </div>

      <div class="form-group">
        <img class="img-thumb" src="{{product.image}}" />
        <label for="image">Image</label>
        <input id="image" name="image" type="file" class="input-field" value="{{product.image}}" />
      </div>
	  <div class="form-group">
        <label for="group">Group</label>
        <select id="group" class="input-field" name="category">
        {{# each categories}}
       		{{# if isSelected}}
        		<option value="{{_id}}" selected="selected">{{name}}</option>
        	{{else}}
        		<option value="{{_id}}">{{name}}</option>
        	{{/ if}}
        {{/ each}}
        </select>
      </div>
      <div class="form-group">
        <input class="btn form-btn btn-warning" type="submit" class="btn" value="Edit">
      </div>
    </form>

  </main>

{{> footer}}
</body>
</html>