<!DOCTYPE html>
<html lang="en">
{{>head}}
<body>
{{>header}}

<main>
   <form class="form center-form" method="POST">
	  <h2 class="center">Delete product</h2>
	  <div class="form-group">
	    <img class="img-thumb" src="{{product.image}}" />
	  </div>
      <div class="form-group">
        <label for="name">Name</label>
        <input id="name" name="name" type="text" class="input-field" value="{{product.name}}" disabled="disabled" />
      </div>

      <div class="form-group">
        <label for="description">Description</label>
        <textarea id="description" name="description" type="text" 
          class="input-field" disabled="disabled">{{product.description}}</textarea>
      </div>

      <div class="form-group">
        <label for="price">Price</label>
        <input id="price" name="price" type="number" step="0.01" 
          class="input-field" value="{{product.price}}" disabled="disabled" />
      </div>

      <div class="form-group">
        <input class="btn form-btn btn-danger" type="submit" class="btn" value="Delete">
      </div>
    </form>

  </main>

{{> footer}}
</body>
</html>